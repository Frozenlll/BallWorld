<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@drawable/anotherbac">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arraw3"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infotitle"
                android:background="@drawable/infotitle"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/levelinfo"
                android:background="@drawable/levelinfo"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="400"
                android:textSize="20dp"
                android:textColor="#ab6c39"
                android:gravity="center_vertical|right"
                android:paddingRight="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hpinfo"
                android:background="@drawable/hpinfo"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="400"
                android:textSize="20dp"
                android:textColor="#ab6c39"
                android:gravity="center_vertical|right"
                android:paddingRight="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/damageinfo"
                android:background="@drawable/damageinfo"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="400"
                android:textSize="20dp"
                android:textColor="#ab6c39"
                android:gravity="center_vertical|right"
                android:paddingRight="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expinfo"
                android:background="@drawable/expinfo"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="400"
                android:textSize="20dp"
                android:textColor="#ab6c39"
                android:gravity="center_vertical|right"
                android:paddingRight="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/defenseinfo"
                android:background="@drawable/defenseinfo"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:text="400"
                android:textSize="20dp"
                android:textColor="#ab6c39"
                android:gravity="center_vertical|right"
                android:paddingRight="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infofoot"
                android:background="@drawable/infofoot"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weaponinfo"
                android:layout_gravity="center_vertical"
                android:background="@drawable/weaponbac"
                android:layout_marginBottom="15dp"
                android:textColor="@color/smssdk_black"
                android:text=" 此处是武器名称 \n 此处是武器伤害 \n 此处是武器防御 "
                android:paddingTop="15dp"
                android:paddingLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/defeninfo"
                android:layout_gravity="center_vertical"
                android:background="@drawable/weaponbac"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:textColor="@color/smssdk_black"
                android:text=" 此处是防具名称 \n 此处是防具伤害 \n 此处是防具防御 "/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
